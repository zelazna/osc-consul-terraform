{
  "builders": [
    {
      "type": "osc-bsu",
      "region": "eu-west-2",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "source_omi_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "Ubuntu-18.04-2021.02.04-0"
        },
        "owners": [
          "188187048142"
        ],
        "most_recent": true
      },
      "vm_type": "t2.medium",
      "ssh_username": "outscale",
      "omi_name": "consul_stack {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo mkdir /ops",
        "sudo chmod 777 /ops"
      ]
    },
    {
      "type": "file",
      "source": "../config",
      "destination": "/ops/config"
    },
    {
      "type": "file",
      "source": "../scripts",
      "destination": "/ops/scripts"
    },
    {
      "type": "shell",
      "script": "scripts/setup.sh"
    }
  ],
  "variables": {
    "access_key": "{{env `OUTSCALE_ACCESSKEYID`}}",
    "secret_key": "{{env `OUTSCALE_SECRETKEYID`}}"
  }
}